{
    "app-id" : "com.github.rogercrocker.badabib",
    "runtime" : "org.gnome.Platform",
    "runtime-version" : "40",
    "sdk" : "org.gnome.Sdk",
    "command" : "badabib",
    "finish-args" : [
        "--share=network",
        "--share=ipc",
        "--socket=fallback-x11",
        "--socket=wayland",
        "--filesystem=home"
    ],
    "cleanup" : [
        "/include",
        "/lib/pkgconfig",
        "/man",
        "/share/doc",
        "/share/gtk-doc",
        "/share/man",
        "/share/pkgconfig",
        "*.la",
        "*.a"
    ],
    "modules" : [
        {
            "name" : "pip-install",
            "buildsystem" : "simple",
            "build-options": {"build-args": ["--share=network"]},
            "build-commands": ["pip3 install --prefix=/app bibtexparser watchgod"]
        },
        {
            "name" : "badabib",
            "builddir" : true,
            "buildsystem" : "meson",
            "sources" : [
                {
                    "type" : "git",
                    "url" : "https://github.com/RogerCrocker/BadaBib.git",
                    "tag": "v0.1.0",
                    "commit": "ea411aa0ce47ed804133881d0bd3981155899745"
                }
            ]
        }
    ]
}
